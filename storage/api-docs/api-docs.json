                    },
                    "event_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "event": {
                        "$ref": "#/components/schemas/Event"
                    }
                },
                "type": "object"
            },
            "Error": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "An error occurred"
                    }
                },
                "type": "object"
            },
            "ValidationError": {
                "properties": {
                    "title": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "starts_at": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
